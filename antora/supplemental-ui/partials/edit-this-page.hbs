{{#with (lookup page.attributes 'upstream-edit-url')}}
<div class="edit-this-page" data-pagefind-ignore="all"><a href="{{this}}">Edit this Page</a></div>
{{else if (and page.fileUri (not env.CI))}}
<div class="edit-this-page" data-pagefind-ignore="all"><a href="{{page.fileUri}}">Edit this Page</a></div>
{{else if (and page.editUrl (or env.FORCE_SHOW_EDIT_PAGE_LINK (not page.origin.private)))}}
<div class="edit-this-page" data-pagefind-ignore="all"><a href="{{page.editUrl}}">Edit this Page</a></div>
{{/with}}
